{
  "version": "1.0",
  "metadata": {
    "name": "zyloch-backend",
    "description": "Backend service configuration"
    "environment": "production"
  },
  "services": {
    "api": {
      "image": "ghcr.io/zyloch/backend:1.4.2",
      "replicas": 2,
      "ports": [
        {
          "name": "http",
          "containerPort": 8080,
          "protocol": "TCP",
        }
      ],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info"
      }
    }
  }
  "networking": {
    "ingress": {
      "enabled": true
    }
  }
}

